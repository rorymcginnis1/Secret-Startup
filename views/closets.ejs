<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Items</title>
    <link rel="stylesheet" href="public/css/style.css">
    <style>
        nav {
            overflow: visible;
        }
    </style>
    <script src="public/js/login.js"></script>
    <script src="public/js/list.js"></script>
    <script src="public/js/validate.js"></script>
</head>
<body>

    <nav>
        <form action="/logout" method="POST">
            <button type="submit">Logout</button>
        </form>
        
        <a href="/email_info" style="margin-left: 85%;">Add Items</a>

        <div id="container">
            <a id="addClosetLink" href="#">Add New Closet</a>
          </div>
        <div class="dropdown">
            <a href="/" class="dropbtn">Closets</a>
            <div class="dropdown-content" id="dropdown-content">
              <!-- Dynamic content will be inserted here -->
            </div>
          </div>

    </nav>

    <div class="container">
        <h1>Items</h1>
        <form action="/add_to_closet" method="POST">
            <button type="submit">Add to Closet</button>
        </form>

        <ul>
            <% test.forEach((item, index) => { %>
                <li>
                    <strong>Name:</strong> <%= item[0] %><br>
                    <strong>Quantity:</strong> <%= item[1] %><br>
                    <strong>Price:</strong> <%= item[2] %><br>
                    <img src="<%= item[3] %>" alt="<%= item[0] %>">
                    <button class="delete-btn" onclick="removeItem(<%= index %>)">Delete</button>
                </li>
            <% }); %>
        </ul>
    </div>
    <a href="/delete_closet" class="delete-button">Delete this closet</a>


</body>
</html>
