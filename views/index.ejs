<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Items</title>
    <style>
        .delete-btn {
            background-color: #ff0000;
            color: #ffffff;
            padding: 5px 10px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <h1>Items</h1>
    <ul>
        <% test.forEach((item, index) => { %>
            <li>
                <strong>Name:</strong> <%= item[0] %><br>
                <strong>Quantity:</strong> <%= item[1] %><br>
                <strong>Price:</strong> <%= item[2] %><br>
                <img src="<%= item[3] %>" alt="<%= item[0] %>">
                <button class="delete-btn" onclick="removeItem(<%= index %>)">Delete</button>
            </li>
        <% }); %>
    </ul>

    <script>
        function removeItem(index) {
            fetch(`/deleteItem/${index}`, {
                method: 'DELETE',
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    renderList(data.test);
                } else {
                    console.error('Failed to delete item.');
                }
            })
            .catch(error => {
                console.error('Error:', error);
            });
        }

        function renderList(test) {
            const list = document.querySelector('ul');
            list.innerHTML = '';
            test.forEach((item, index) => {
                const listItem = document.createElement('li');
                listItem.innerHTML = `
                    <strong>Name:</strong> ${item[0]}<br>
                    <strong>Quantity:</strong> ${item[1]}<br>
                    <strong>Price:</strong> ${item[2]}<br>
                    <img src="${item[3]}" alt="${item[0]}">
                    <button class="delete-btn" onclick="removeItem(${index})">Delete</button>
                `;
                list.appendChild(listItem);
            });
        }
    </script>
</body>
</html>
